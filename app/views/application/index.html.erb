<main ng-app="invertedIndex">
  <section class="main" ng-controller="MainController">
    <header>
      <h1>Inverted Indexing</h1>
    </header>
    <section class="search">
      <h2>Search</h2>
      <autocomplete data="words" ng-model="queryString"></autocomplete>
      <button class="search-button" ng-click="searchListings(queryString)">Search</button>
    </section>
    <section ng-show="searchResults" class="results-section hidden">
      <h2>Results</h2>
      <ul class="results-list">
        <li ng-repeat="result in searchResults">
          <section>
            <h3 ng-bind-html="result.title | sanitize"></h3> 
            <p><span ng-bind-html="result.summary | removeContactInfo "></span> <span>Interested? <a href="{{result.url}}">Read the Full Listing</a></span></p>
          </section>
        </li>
      </ul>
    </section>
  </section>
</main>